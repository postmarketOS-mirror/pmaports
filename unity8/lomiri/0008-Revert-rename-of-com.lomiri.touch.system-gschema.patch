From 8db1c195962c0e563c5a23515848edfbcfbff5d0 Mon Sep 17 00:00:00 2001
From: Luca Weiss <luca@z3ntu.xyz>
Date: Sat, 17 Apr 2021 19:44:15 +0200
Subject: [PATCH 8/8] Revert rename of com.lomiri.touch.system gschema

---
 plugins/Lomiri/Session/orientationlock.cpp | 2 +-
 plugins/Powerd/Powerd.cpp                  | 2 +-
 tests/autopilot/lomiri/fixture_setup.py    | 4 ++--
 3 files changed, 4 insertions(+), 4 deletions(-)

diff --git a/plugins/Lomiri/Session/orientationlock.cpp b/plugins/Lomiri/Session/orientationlock.cpp
index 29530cc07..310577649 100644
--- a/plugins/Lomiri/Session/orientationlock.cpp
+++ b/plugins/Lomiri/Session/orientationlock.cpp
@@ -24,7 +24,7 @@ OrientationLock::OrientationLock(QObject *parent)
     , m_enabled(false)
     , m_savedOrientation(Qt::PortraitOrientation)
 {
-    m_systemSettings = g_settings_new("com.lomiri.touch.system");
+    m_systemSettings = g_settings_new("com.ubuntu.touch.system");
     g_signal_connect(m_systemSettings, "changed::rotation-lock",
                      G_CALLBACK(OrientationLock::onEnabledChangedProxy), this);
     m_enabled = g_settings_get_boolean(m_systemSettings, "rotation-lock");
diff --git a/plugins/Powerd/Powerd.cpp b/plugins/Powerd/Powerd.cpp
index cec3e3ef0..58947c02a 100644
--- a/plugins/Powerd/Powerd.cpp
+++ b/plugins/Powerd/Powerd.cpp
@@ -54,7 +54,7 @@ Powerd::Powerd(QObject* parent)
                                       this,
                                       SLOT(handleDisplayPowerStateChange(int, int)));
 
-    systemSettings = g_settings_new("com.lomiri.touch.system");
+    systemSettings = g_settings_new("com.ubuntu.touch.system");
     g_signal_connect(systemSettings, "changed::auto-brightness", G_CALLBACK(autoBrightnessChanged), lomiriScreen);
     g_signal_connect(systemSettings, "changed::activity-timeout", G_CALLBACK(activityTimeoutChanged), lomiriScreen);
     g_signal_connect(systemSettings, "changed::dim-timeout", G_CALLBACK(dimTimeoutChanged), lomiriScreen);
diff --git a/tests/autopilot/lomiri/fixture_setup.py b/tests/autopilot/lomiri/fixture_setup.py
index 10e733b16..2c96ad8a8 100644
--- a/tests/autopilot/lomiri/fixture_setup.py
+++ b/tests/autopilot/lomiri/fixture_setup.py
@@ -272,7 +272,7 @@ class DisplayRotationLock(fixtures.Fixture):
     def _is_rotation_lock_enabled(self):
         command = [
             'gsettings', 'get',
-            'com.lomiri.touch.system',
+            'com.ubuntu.touch.system',
             'rotation-lock'
         ]
         output = subprocess.check_output(command, universal_newlines=True)
@@ -282,7 +282,7 @@ class DisplayRotationLock(fixtures.Fixture):
         value_string = 'true' if value else 'false'
         command = [
             'gsettings', 'set',
-            'com.lomiri.touch.system',
+            'com.ubuntu.touch.system',
             'rotation-lock', value_string
         ]
         subprocess.check_output(command)
