pkgname=ubuntu-ui-toolkit
pkgver=0_git20200722
_commit="411dca17a083cb81ed85cd5d8e62c6a60af35999"
pkgrel=0
pkgdesc='The Ubuntu UI toolkit used in Ubuntu Touch'
arch="all"
url="https://unity8.io"
license="LGPL-3.0-only"
depends="qt5-qtfeedback qt5-qtgraphicaleffects"
depends_dev="libnih-dev qt5-qtsvg-dev qt5-qtpim-dev qt5-qtsystems-dev lttng-ust-dev libxi-dev eudev-dev mir-dev libevdev-dev qt5-qtgraphicaleffects qt5-qtfeedback-dev"
makedepends="$depends_dev qt5-qttools-dev qt5-qtdeclarative-dev"
checkdepends="diffutils bash grep xvfb-run dbus-test-runner"
source="$pkgname-$_commit.tar.gz::https://github.com/ubports/ubuntu-ui-toolkit/archive/$_commit.tar.gz
	0001-Don-t-hardcode-Debian-specific-python3-path.patch
	0002-Remove-debian-isms-from-test-runner.patch
	0003-Disable-Werror.patch
	0004-Don-t-build-app-launch-profiler.patch
	0005-Fixes-from-xenial_-_qt-5-12-branch.patch
	0006-Compatibility-with-Qt-5.15.patch
	0007-Register-Ubuntu.Test-plugin-as-module.patch
	"
subpackages="$pkgname-dev $pkgname-lang"
options="!check" # several tests fail
builddir="$srcdir/$pkgname-$_commit"

build() {
	qmake-qt5 CONFIG+=no_docs
	make
}

check() {
	xvfb-run make check
}

package() {
	make INSTALL_ROOT="$pkgdir" install
}

