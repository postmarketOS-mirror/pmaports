# Contributor: Bart Ribbers <bribbers@disroot.org>
# Maintainer: Luca Weiss <luca@z3ntu.xyz>
pkgname=libusermetrics
pkgver=0_git20210322
_commit="7dbcb2ee699ca54479c9b4ed4ac64c2f4a8d74e0"
pkgrel=0
pkgdesc='Library for exporting anonymous metrics about users'
arch="all"
url="https://gitlab.com/ubports/core/libusermetrics"
license="GPL-3.0 LGPL-3.0 LGPL-2.1"
depends_dev="qt5-qtxmlpatterns-dev libapparmor-dev gsettings-qt-dev qt5-qtdeclarative-dev click-dev qdjango-dev"
makedepends="$depends_dev cmake-extras qt5-qtbase-dev libapparmor libqtdbustest intltool gtest-dev gmock"
checkdepends="dbus"
source="https://gitlab.com/ubports/core/libusermetrics/-/archive/$_commit/libusermetrics-$_commit.tar.gz"
subpackages="$pkgname-dev $pkgname-lang"
builddir="$srcdir/$pkgname-$_commit"

build() {
	cmake -B build \
		-DCMAKE_BUILD_TYPE=Release \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	make -C build
}

check() {
	cd build
	CTEST_OUTPUT_ON_FAILURE=TRUE ctest
}

package() {
	make -C build DESTDIR="$pkgdir" install
}

sha512sums="8c3201e3f40c0f4ee1999e6094299e132fa139849f42a579344add2bc5553de4a5503f258a4e0914039d40acc0d2d755670c072e31c482ec8033caf4ae46324e  libusermetrics-7dbcb2ee699ca54479c9b4ed4ac64c2f4a8d74e0.tar.gz"
