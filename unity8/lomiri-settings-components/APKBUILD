# Maintainer: Luca Weiss <luca@z3ntu.xyz>
pkgname=lomiri-settings-components
pkgver=0_git20210326
pkgrel=0
_commit="c2054fe672ad08d9f79591b0ddc2f93cafa9f43d"
pkgdesc="Ubuntu settings components for Unity8"
arch="all"
url="https://gitlab.com/ubports/core/lomiri-settings-components"
license="GPL-3.0-only AND LGPL-3.0-only"
makedepends="cmake cmake-extras qt5-qtdeclarative-dev"
source="https://gitlab.com/ubports/core/lomiri-settings-components/-/archive/$_commit/lomiri-settings-components-$_commit.tar.gz
	qmltestrunner.patch"
subpackages="$pkgname-lang"
builddir="$srcdir/$pkgname-$_commit"

build() {
	cmake -B build \
		-DCMAKE_BUILD_TYPE=Release \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	make -C build
}

check() {
	cd build
	CTEST_OUTPUT_ON_FAILURE=TRUE ctest
}

package() {
	make -C build DESTDIR="$pkgdir" install
}

