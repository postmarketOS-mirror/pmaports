# Maintainer: Luca Weiss <luca@z3ntu.xyz>
pkgname=gmenuharness
pkgver=0_git20210407
_commit="e39664917c09c3d8580a041182d6fce41de29863"
pkgrel=0
pkgdesc="Library to test GMenuModel structures."
url="https://gitlab.com/ubports/core/gmenuharness"
arch="all"
license="LGPL-3.0-only"
makedepends="cmake cmake-extras qt5-qtbase-dev lomiri-api-dev glib-dev gtest-dev gmock libqtdbustest"
checkdepends="dbus"
source="https://gitlab.com/ubports/core/gmenuharness/-/archive/$_commit/gmenuharness-$_commit.tar.gz"
subpackages="$pkgname-dev"
builddir="$srcdir/$pkgname-$_commit"
options="!check" # Tests fail under QEMU

build() {
	cmake -B build \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	make -C build
}

check() {
	cd build/tests
	CTEST_OUTPUT_ON_FAILURE=TRUE ctest
}

package() {
	make -C build DESTDIR="$pkgdir" install
}

sha512sums="2014f385f13b755bf82a76db2f0f2a22f542cf9e7129d0019b4a0f55cd2506fe110ac8509f81a02541c61dbd61ff8b945348fc8eb21abc2933133aed29f20a0f  gmenuharness-e39664917c09c3d8580a041182d6fce41de29863.tar.gz"
