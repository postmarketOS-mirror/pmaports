# Maintainer: Luca Weiss <luca@z3ntu.xyz>
pkgname=gmenuharness
pkgver=0_git20200517
_commit="c7242648fa0a85b6ff810db8676deb7e51974182"
pkgrel=0
pkgdesc="Library to test GMenuModel structures."
url="https://github.com/ubports/gmenuharness"
arch="all"
license="LGPL-3.0-only"
makedepends="cmake cmake-extras qt5-qtbase-dev lomiri-api-dev glib-dev gtest-dev gmock libqtdbustest"
checkdepends="dbus"
source="$pkgname-$_commit.tar.gz::https://github.com/ubports/gmenuharness/archive/$_commit.tar.gz
	lomiri-rename.patch
	"
subpackages="$pkgname-dev"
builddir="$srcdir/$pkgname-$_commit"
options="!check" # Tests fail under QEMU

build() {
	cmake -B build \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	make -C build
}

check() {
	cd build/tests
	CTEST_OUTPUT_ON_FAILURE=TRUE ctest
}

package() {
	make -C build DESTDIR="$pkgdir" install
}

