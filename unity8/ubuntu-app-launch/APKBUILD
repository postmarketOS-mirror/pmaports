# Contributor: Bart Ribbers <bribbers@disroot.org>
# Maintainer: Luca Weiss <luca@z3ntu.xyz>
pkgname=ubuntu-app-launch
pkgver=0_git20181230
pkgrel=0
_commit="55c0338a110a10994de4efc220d36293080770e2"
pkgdesc="Session init system job for Launching Applications"
arch="all"
url="https://github.com/ubports/ubuntu-app-launch"
license="GPL-3.0"
depends_dev="gobject-introspection-dev lttng-ust-dev json-glib-dev zeitgeist-dev unity-api-dev curl-dev properties-cpp-dev"
makedepends="$depends_dev cmake cmake-extras dbus-test-runner qt5-qtdeclarative gtest-dev glib-dev mir-dev pthread-cancel-noop"
checkdepends="gtest-dev gmock py3-dbusmock"
source="$pkgname-$_commit.tar.gz::https://github.com/ubports/ubuntu-app-launch/archive/$_commit.tar.gz
	libual-test_libertine.patch"
subpackages="$pkgname-dev"
builddir="$srcdir/$pkgname-$_commit"
# 23% tests passed, 10 tests failed out of 13
# Build without crossdirect as long as we need the LD_PRELOAD
options="!check !pmb:crossdirect"

build() {
	cmake -B build \
		-DCMAKE_BUILD_TYPE=None \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	# Work around QEMU issue with pthread_cancel
	# See https://gitlab.com/postmarketOS/pmaports/issues/190
	LD_PRELOAD=/usr/lib/preload/pthread_cancel_noop.so \
		make -C build
}

check() {
	cd build
	CTEST_OUTPUT_ON_FAILURE=TRUE ctest
}

package() {
	make -C build DESTDIR="$pkgdir" install
}

