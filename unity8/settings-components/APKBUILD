# Contributor: Bart Ribbers <bribbers@disroot.org>
# Maintainer: Luca Weiss <luca@z3ntu.xyz>
pkgname=settings-components
pkgver=0_git20201125
pkgrel=0
_commit="2d304cd2f6918645096a6240668f0483bed513fa"
pkgdesc="Ubuntu settings components for Unity8"
arch="all"
url="https://github.com/ubports/settings-components"
license="GPL-3.0-only AND LGPL-3.0-only"
makedepends="cmake cmake-extras qt5-qtdeclarative-dev"
source="$pkgname-$_commit.tar.gz::https://github.com/ubports/settings-components/archive/$_commit.tar.gz
	qmltestrunner.patch"
subpackages="$pkgname-lang"
builddir="$srcdir/$pkgname-$_commit"

build() {
	cmake -B build \
		-DCMAKE_BUILD_TYPE=Release \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	make -C build
}

check() {
	cd build
	CTEST_OUTPUT_ON_FAILURE=TRUE ctest
}

package() {
	make -C build DESTDIR="$pkgdir" install
}

