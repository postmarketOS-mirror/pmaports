# Contributor: Bart Ribbers <bribbers@disroot.org>
# Maintainer: Luca Weiss <luca@z3ntu.xyz>
pkgname=url-dispatcher
pkgver=0_git20200925
_commit="58a498dbd19e46f3baa17629bb8b56be860cb738"
pkgrel=0
pkgdesc="Service to allow sending of URLs and get handlers started"
arch="all"
url="https://github.com/ubports/url-dispatcher"
license="LGPL-3.0-only"
depends_dev="ubuntu-app-launch-dev json-glib-dev click-dev libapparmor-dev"
makedepends="$depends_dev cmake dbus-test-runner cmake-extras glib-dev gtest-dev gmock intltool dbus-test-runner-dev"
checkdepends="py3-dbusmock"
source="$pkgname-$_commit.tar.gz::https://github.com/ubports/url-dispatcher/archive/$_commit.tar.gz"
subpackages="$pkgname-dev"
builddir="$srcdir/$pkgname-$_commit"
options="!check" # several tests hang

build() {
	cmake -B build \
		-DCMAKE_BUILD_TYPE=None \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib \
		-Dwerror=FALSE
	make -C build
}

check() {
	cd build
	CTEST_OUTPUT_ON_FAILURE=TRUE ctest
}

package() {
	make -C build DESTDIR="$pkgdir" install
}

sha512sums="208e7c2f233f67dd05489b9dd46499b71a364387a154cee0fd630c23224a2416fd133f3022d8890ae13156f7f4c0c3ca37c8c6e39d9552b35d4f02395cb120cc  url-dispatcher-58a498dbd19e46f3baa17629bb8b56be860cb738.tar.gz"
