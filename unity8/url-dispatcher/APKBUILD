# Contributor: Bart Ribbers <bribbers@disroot.org>
# Maintainer: Luca Weiss <luca@z3ntu.xyz>
pkgname=url-dispatcher
pkgver=0_git20181007
_commit="b9a83f539b6d0c51b7f2397d40aed1132366672b"
pkgrel=0
pkgdesc="Service to allow sending of URLs and get handlers started"
arch="all"
url="https://github.com/ubports/url-dispatcher"
license="LGPL-3.0-only"
depends_dev="ubuntu-app-launch-dev json-glib-dev click-dev libapparmor-dev"
makedepends="$depends_dev cmake dbus-test-runner cmake-extras glib-dev gtest-dev gmock intltool dbus-test-runner-dev"
checkdepends="py3-dbusmock"
source="$pkgname-$_commit.tar.gz::https://github.com/ubports/url-dispatcher/archive/$_commit.tar.gz
	0001-Add-missing-header.patch"
subpackages="$pkgname-dev"
builddir="$srcdir/$pkgname-$_commit"
options="!check" # several tests hang

build() {
	cmake -B build \
		-DCMAKE_BUILD_TYPE=None \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib \
		-Dwerror=FALSE
	make -C build
}

check() {
	cd build
	CTEST_OUTPUT_ON_FAILURE=TRUE ctest
}

package() {
	make -C build DESTDIR="$pkgdir" install
}

