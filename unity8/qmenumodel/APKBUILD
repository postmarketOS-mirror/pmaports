# Contributor: Bart Ribbers <bribbers@disroot.org>
# Maintainer: Luca Weiss <luca@z3ntu.xyz>
pkgname=qmenumodel
pkgver=0_git20201008
pkgrel=0
_commit="a9f44cb712a3ce39e377341fe2b52c05a4b37e68"
pkgdesc='qmenumodel'
arch="all"
url="https://github.com/ubports/qmenumodel"
license="LGPL-3.0-only"
depends_dev="qt5-qtdeclarative-dev"
makedepends="$depends_dev cmake qt5-qtbase-dev"
checkdepends="dbus-test-runner py3-dbus py3-gobject3"
source="$pkgname-$_commit.tar.gz::https://github.com/ubports/qmenumodel/archive/$_commit.tar.gz"
subpackages="$pkgname-dev"
builddir="$srcdir/$pkgname-$_commit"

build() {
	cmake -B build \
		-DCMAKE_BUILD_TYPE=Release \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	make -C build
}

check() {
	cd build
	CTEST_OUTPUT_ON_FAILURE=TRUE ctest
}

package() {
	make -C build DESTDIR="$pkgdir" install
}

sha512sums="c998ef8ca4168ed45b45f7c7cdc14104cf1678769bcb303c112b76fb5715092d340197d622b82c38f2d18be9b188ad573bc559a6ddd593c071e512222067cbcc  qmenumodel-a9f44cb712a3ce39e377341fe2b52c05a4b37e68.tar.gz"
