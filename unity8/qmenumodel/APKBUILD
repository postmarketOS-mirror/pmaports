# Contributor: Bart Ribbers <bribbers@disroot.org>
# Maintainer: Luca Weiss <luca@z3ntu.xyz>
pkgname=qmenumodel
pkgver=0_git20171227
pkgrel=0
_commit="f2367433aef6e289eb527e342e48b21392dde843"
pkgdesc='qmenumodel'
arch="all"
url="https://github.com/ubports/qmenumodel"
license="LGPL-3.0-only"
depends_dev="qt5-qtdeclarative-dev"
makedepends="$depends_dev cmake qt5-qtbase-dev"
checkdepends="dbus-test-runner py3-dbus py3-gobject3"
source="$pkgname-$_commit.tar.gz::https://github.com/ubports/qmenumodel/archive/$_commit.tar.gz"
subpackages="$pkgname-dev"
builddir="$srcdir/$pkgname-$_commit"

build() {
	cmake -B build \
		-DCMAKE_BUILD_TYPE=Release \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	make -C build
}

check() {
	cd build
	CTEST_OUTPUT_ON_FAILURE=TRUE ctest
}

package() {
	make -C build DESTDIR="$pkgdir" install
}

sha512sums="17a97ffddac91a26647db8229924d3195c49c60602afa89c82928e7493bf04495d0cbfe8c38c61d8dafd3db1335063e3da7f1926faa9e177cb7aa2b384aab533  qmenumodel-f2367433aef6e289eb527e342e48b21392dde843.tar.gz"
