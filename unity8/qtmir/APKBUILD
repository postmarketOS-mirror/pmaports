# Maintainer: Luca Weiss <luca@z3ntu.xyz>
pkgname=qtmir
pkgver=0_git20210323
_commit="824e8b5bf92c2374d331af99e6845ea594ec0ea5"
pkgrel=0
pkgdesc="QPA plugin to make Qt a Mir server"
arch="all"
url="https://gitlab.com/ubports/core/qtmir"
license="LGPL-3.0-only"
makedepends="cmake cmake-extras gtest-dev mir-dev process-cpp-dev qt5-qtdeclarative-dev qt5-qtsensors-dev ubuntu-app-launch-dev gsettings-qt-dev libqtdbustest libqtdbusmock content-hub-dev valgrind-dev url-dispatcher-dev cgmanager-dev lttng-ust-tools"
checkdepends="py3-dbusmock dbus"
source="https://gitlab.com/ubports/core/qtmir/-/archive/$_commit/qtmir-$_commit.tar.gz
	0001-Revert-Use-app-launch-2.patch
	0002-Disable-Werror.patch
	"
builddir="$srcdir/$pkgname-$_commit"

build() {
	cmake -B build \
		-DCMAKE_BUILD_TYPE=Release \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	make -C build
}

check() {
	cd build
	CTEST_OUTPUT_ON_FAILURE=TRUE ctest
}

package() {
	make -C build DESTDIR="$pkgdir" install
}

