# Contributor: Bart Ribbers <bribbers@disroot.org>
# Maintainer: Luca Weiss <luca@z3ntu.xyz>
pkgname=unity-api
pkgver=0_git20200512
_commit="e2994d7f034b9453bd198f838084cd2148a1c023"
pkgrel=0
pkgdesc="API for Unity shell integration"
url="https://github.com/ubports/unity-api"
arch="all"
license="LGPL-3.0"
makedepends="$depends_dev cmake cmake-extras qt5-qtdeclarative-dev libqtdbustest gtest-dev gmock"
checkdepends="dbus"
source="$pkgname-$_commit.tar.gz::https://github.com/ubports/unity-api/archive/$_commit.tar.gz
	qmltestrunner.patch
	0001-GlibMemory.h-remove-GRefString-from-smart-pointers.patch"
subpackages="$pkgname-dev"
builddir="$srcdir/$pkgname-$_commit"

build() {
	cmake -B build \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	make -C build
}

check() {
	cd build
	# GioMemory_test fails under QEMU for aarch64
	# Error connecting to D-Bus address unix:abstract=/tmp/dbus-IRpDQKgJCX,guid=daa250871edc3ad426e54ceb5e9b5bde: Error sending credentials: Error sending message: No buffer space available
	env CTEST_OUTPUT_ON_FAILURE=TRUE ctest -E "GioMemory_test"
}

package() {
	make -C build DESTDIR="$pkgdir" install
}

